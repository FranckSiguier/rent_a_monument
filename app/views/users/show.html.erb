<div class="container">

  <div class="col-s6">
    <div class="container" style="margin-top: 10px;">
      <%= cl_image_tag current_user.photo.key, class: 'avatar-large p-10' %>
      <h1> <%= current_user.full_name %> </h1>
      <h3>#average_rating</h3>
    </div>
  </div>
</div>
<hr>
<div class="container">

  <% if current_user.monuments.empty? %>

    <h2>You have no monuments for instance</h2>
    <%= link_to 'Add a monument !', new_user_monument_path(current_user)  %>

  <% else %>

    <h2>Your monuments :</h2>

    <div class="card-container">
      <% current_user.monuments.each do |monument| %>
        <%= render 'shared/monument_card', monument: monument %>
      <% end %>
    </div>
    <%= link_to 'Add a monument !', new_user_monument_path(current_user), class: "btn btn-ghost" %>

  <% end %>
</div>

<hr>

<div class="container">
  <h2>Your bookings:</h2>
  <table class="Bookings table" class="text-center">
    <thead>
      <tr>
        <th scope="col">Monument</th>
        <th scope="col">Date of arrival</th>
        <th scope="col">Date of departure</th>
        <th scope="col">Duration of stay</th>
        <th scope="col" colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.monument.name %></td>
          <td><%= booking.date_of_arrival %></td>
          <td><%= booking.date_of_departure %></td>
          <td><%= booking.duration %></td>
          <td><%= link_to 'Create a review', monument_path(booking.monument), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



