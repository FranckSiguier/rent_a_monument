<div class="container">
  <h1>Monuments</h1>
</div>

<div class="container">
    <div class="cards">
      <% @monuments.each do |monument| %>
      <div class="card-monument">
        <div class="card-img">
           <%= link_to monument_path(monument) do %>
          <%= image_tag cl_image_path monument.photos[0].key %>
          <% end %>
        </div>
        <div class="card-info">
          <p><%= monument.name %></p>
          <p><%= monument.average_rating %> <i class="fas fa-star"></i></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
