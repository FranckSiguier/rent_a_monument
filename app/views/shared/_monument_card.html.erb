<div class="card">
  <h4> <%= monument.name.capitalize %> </h4>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% monument.photos.each_with_index do |photo, i| %>
        <% if i == 0 %>
          <div class="carousel-item active">
            <%= cl_image_tag photo.key, class: "text-center d-block w-100", alt:"First slide"%>
          </div>
        <% else %>
          <div class="carousel-item">
            <%= cl_image_tag photo.key , class: "text-center d-block w-100", alt: "slide number #{i + 1}"%>
          </div>
        <% end %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


