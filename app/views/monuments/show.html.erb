<div class="container">
  <h1><%= @monument.name %></h1>
  <% if @monument.photos.attached? %>
  <% @monument.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 150, width: 200, crop: :fill , class: "text-center"%>
    <% end %>
  <% end %>
  <p><%= @monument.description %></p>
</div>

<div class="container">
  <%= render 'form_booking', monument: @monument %>
</div>

<div class="container">
  <%= render 'form_review', monument: @monument %>
</div>

