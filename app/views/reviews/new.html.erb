<div class="login-container">
  <div class="card-form d-flex justify-content-center">
    <div class="rv-p">
      <div class="review-form">
        <h3>Add a review</h3>
        <%= simple_form_for [@monument, @review] do |f| %>
          <%= f.input :title %>
          <%= f.input :content %>
          <div class="radio-buttons">
            <%= f.input :rating, collection: 1..5, as: :radio_buttons %>
          </div>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

